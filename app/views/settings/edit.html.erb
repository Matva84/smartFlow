<h1>Modifier le paramètre</h1>

<%= form_with(model: @setting, local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :key, "Clé", class: "form-label" %>
    <%= form.text_field :key, class: "form-control", readonly: true %>
  </div>

  <div class="mb-3">
    <%= form.label :value, "Valeur", class: "form-label" %>
    <%= form.text_field :value, class: "form-control" %>
  </div>

  <%= form.submit "Enregistrer", class: "btn btn-primary" %>
<% end %>

<%= link_to "Retour aux paramètres", settings_path, class: "btn btn-secondary" %>
