<h1>Ajouter un item</h1>

<%= form_with(model: [@quote, @item], local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :category, "Catégorie" %>
    <%= form.text_field :category, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, "Description" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :duration, "Durée (en heures)" %>
    <%= form.number_field :duration, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :nb_people, "Nombre de personnes" %>
    <%= form.number_field :nb_people, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :hourly_cost, "Coût horaire (€)" %>
    <%= form.number_field :hourly_cost, step: 0.01, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :human_margin, "Marge humaine (%)" %>
    <%= form.number_field :human_margin, step: 0.01, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :material, "Matériel" %>
    <%= form.text_field :material, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :unit_price_ht, "Prix unitaire HT (€)" %>
    <%= form.number_field :unit_price_ht, step: 0.01, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :quantity, "Quantité" %>
    <%= form.number_field :quantity, class: "form-control" %>
  </div>

  <%= form.submit "Ajouter l'item", class: "btn btn-primary" %>
<% end %>
